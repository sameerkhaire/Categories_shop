@model IEnumerable<ModelLayer.DB.Category>
<div class="container">
    <div class="row pt-4 pb-23">
        <div class="col-6">
            <div class="text-primary">
                Category List
            </div>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Category" asp-action="AddCat" class="btn btn-primary"> Create New Summary</a>
        </div>
    </div>
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>Category Name </th>
                <th>Display Order</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.CategoryName</td>
                    <td>@item.DisplayOrder</td>
                    <td>
                        <div class="w-75 btn-group" role="group">
                            <a asp-controller="Category" asp-action="EditCat" asp-route-id="@item.categoryId" class="btn btn-primary mx-2"><i class="bi bi-pencil-square"></i>Edit</a>
                        </div>

                    </td>

                </tr>
            }
        </tbody>
    </table>
</div>
